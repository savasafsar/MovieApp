<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.example.moviecatch.ui.fragment.SplashFragment"
        android:label="fragment_splash"
        tools:layout="@layout/fragment_splash" >
        <action
            android:id="@+id/action_splashFragment_to_appintroFragment"
            app:destination="@id/appintroFragment" />
        <action
            android:id="@+id/action_splashFragment_to_appintroFragment2"
            app:destination="@id/appintroFragment" />
        <action
            android:id="@+id/action_splashFragment_to_appintroFragment3"
            app:destination="@id/appintroFragment" />
        <action
            android:id="@+id/action_splashFragment_to_mainFragment"
            app:destination="@id/mainFragment" />
    </fragment>
    <fragment
        android:id="@+id/appintroFragment"
        android:name="com.example.moviecatch.ui.fragment.appintro.AppintroFragment"
        android:label="AppintroFragment" >
        <action
            android:id="@+id/action_appintroFragment_to_mainFragment"
            app:destination="@id/mainFragment" />
    </fragment>
    <fragment
        android:id="@+id/mainFragment"
        android:name="com.example.moviecatch.ui.fragment.home.MainFragment"
        android:label="MainFragment" />
</navigation>